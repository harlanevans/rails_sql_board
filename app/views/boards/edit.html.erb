<h1><i>Edit this Board  </i><i class="edit icon"></i></h1>
<%= form_with(model: @board, local: true, class: "ui form") do |f| %>
  <div class="field" >
    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: "Board Name" %>
  </div>
  <%= f.submit nil, class: "ui teal button" %>
  <% end %>